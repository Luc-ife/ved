    <script>
        let noClickCount = 0;
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const attemptsDiv = document.getElementById('attempts');
        const proposalContent = document.getElementById('proposalContent');
        const successMessage = document.getElementById('successMessage');

        const flowerEmojis = ['üå∏', 'üå∫', 'üåπ', 'üå∑', 'üåº', 'üíê', 'üèµÔ∏è', 'üåª'];
        const cryingCats = ['üòø', 'üòø', 'üòø'];
        const messages = [
            "But our story has just begun! üìñ",
            "Every great book has a happy ending... üíï",
            "Like Hosseini's characters, give us a chance at redemption! üåπ",
            "Virginia Woolf would say yes to love! üìö",
            "The best chapters are yet to be written! ‚ú®",
            "Even the strongest feminist believes in love! üí™üíï",
            "Our narrative deserves a beautiful resolution! üå∫",
            "Like 'A Thousand Splendid Suns,' let our love shine! ‚òÄÔ∏è",
            "Every rom-com has obstacles before the happy ending! üé¨",
            "Simone de Beauvoir chose Sartre... choose me! üíï"
        ];

        function createFlower() {
            const flower = document.createElement('div');
            flower.className = 'flower';
            flower.textContent = flowerEmojis[Math.floor(Math.random() * flowerEmojis.length)];
            flower.style.left = Math.random() * 100 + '%';
            flower.style.animationDuration = (Math.random() * 2 + 3) + 's';
            document.body.appendChild(flower);
            
            setTimeout(() => {
                flower.remove();
            }, 4000);
        }

        setInterval(createFlower, 800);

        noBtn.addEventListener('click', function(e) {
            e.preventDefault();
            noClickCount++;
            
            createFlower();
            createFlower();
            createFlower();
            
            // Create crying cat
            const cat = document.createElement('div');
            cat.className = 'flower';
            cat.textContent = 'üòø';
            cat.style.left = '50%';
            cat.style.fontSize = '3rem';
            cat.style.position = 'fixed';
            cat.style.top = '20%';
            cat.style.transform = 'translateX(-50%)';
            cat.style.animation = 'none';
            cat.style.opacity = '1';
            cat.style.zIndex = '1000';
            document.body.appendChild(cat);
            
            setTimeout(() => {
                cat.style.transition = 'all 1s ease-out';
                cat.style.opacity = '0';
                cat.style.transform = 'translateX(-50%) translateY(50px) scale(0.5)';
            }, 100);
            
            setTimeout(() => {
                cat.remove();
            }, 1100);
            
            const randomMessage = messages[Math.floor(Math.random() * messages.length)];
            attemptsDiv.textContent = randomMessage;
            attemptsDiv.style.color = 'var(--color-deep-rose)';
            attemptsDiv.style.fontWeight = 'bold';
            attemptsDiv.style.fontSize = '1.1rem';
            
            const currentSize = parseFloat(window.getComputedStyle(noBtn).fontSize);
            const newSize = Math.max(currentSize - 2, 8);
            noBtn.style.fontSize = newSize + 'px';
            noBtn.style.padding = Math.max(15 - noClickCount * 2, 5) + 'px ' + Math.max(40 - noClickCount * 3, 10) + 'px';
            
            const yesFontSize = parseFloat(window.getComputedStyle(yesBtn).fontSize);
            yesBtn.style.fontSize = (yesFontSize + 2) + 'px';
            
            noBtn.style.transform = 'translateX(' + (Math.random() * 40 - 20) + 'px) translateY(' + (Math.random() * 40 - 20) + 'px) rotate(' + (Math.random() * 30 - 15) + 'deg)';
            
            setTimeout(() => {
                noBtn.style.transform = '';
            }, 500);
            
            if (noClickCount >= 5) {
                noBtn.textContent = 'No (Really?)';
            }
            if (noClickCount >= 10) {
                noBtn.textContent = 'Still No?';
                noBtn.style.opacity = '0.7';
            }
            if (noClickCount >= 15) {
                noBtn.textContent = 'Maybe Yes?';
                noBtn.style.opacity = '0.5';
            }
        });

        yesBtn.addEventListener('click', function() {
            for (let i = 0; i < 30; i++) {
                setTimeout(createFlower, i * 100);
            }
            
            proposalContent.style.display = 'none';
            successMessage.style.display = 'block';
            
            document.body.style.background = 'linear-gradient(135deg, #ffe5ec 0%, #ffc2d1 100%)';
        });

        for (let i = 0; i < 5; i++) {
            setTimeout(createFlower, i * 300);
        }
    </script>
